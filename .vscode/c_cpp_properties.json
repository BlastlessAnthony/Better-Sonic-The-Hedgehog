{
    "configurations": [
        {
            "name": "Mac",
            "includePath": [
                "${workspaceFolder}${pathSeparator}Source${pathSeparator}**",
                "${workspaceFolder}${pathSeparator}Raylib${pathSeparator}include",
                "${workspaceFolder}/Raylib/include"
            ],
            "compilerPath": "/usr/bin/gcc",
            "cStandard": "c17",
            "cppStandard": "c++17",
            "intelliSenseMode": "macos-gcc-x64",
            "configurationProvider": "ms-vscode.makefile-tools",
            "forcedInclude": [
                "${workspaceFolder}${pathSeparator}Raylib${pathSeparator}include${pathSeparator}raylib.h",
                "${workspaceFolder}${pathSeparator}Raylib${pathSeparator}include${pathSeparator}raymath.h",
                "${workspaceFolder}${pathSeparator}Raylib${pathSeparator}include${pathSeparator}rlgl.h"
            ]
        },
        {
            "name": "Win32",
            "includePath": [
                "${workspaceFolder}${pathSeparator}Raylib${pathSeparator}include",
                "${workspaceFolder}${pathSeparator}Source"
            ],
            "compilerPath": "clang++",
            "intelliSenseMode": "${default}",
            "cStandard": "c17",
            "cppStandard": "c++17"
        }
    ],
    "version": 4
}